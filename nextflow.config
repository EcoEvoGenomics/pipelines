outputDir = "output"
workflow.output.mode = "copy"

profiles {

  standard {
    process.executor = "local"
    podman.enabled = true
  }

  saga {
    process.executor = "slurm"
    process.clusterOptions = "--account=nn10082k"
    process.queue = "normal"
    singularity.enabled = true
    singularity.autoMounts = true
    singularity.cacheDir = "work/containers"
  }

}

process {

  withLabel: "ADMIXTURE" {
    container = "quay.io/biocontainers/admixture:1.3.0--0"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "BCFTOOLS" {
    container = "quay.io/biocontainers/bcftools:1.22--h3a4d415_1"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "IQTREE" {
    container = "quay.io/biocontainers/iqtree:3.0.1--h503566f_0"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "MAFFT" {
    container = "quay.io/biocontainers/mafft:7.490--hec16e2b_1"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "PLINK" {
    container = "quay.io/biocontainers/plink:1.90b7.7--h18e278d_1"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "NUMPY" {
    container = "quay.io/biocontainers/numpy:2.2.2"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "RBASE" {
    container = "quay.io/biocontainers/r-base:4.4.1"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "SAMTOOLS" {
    container = "quay.io/biocontainers/samtools:1.19.2--h50ea8bc_1"
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

  withLabel: "SYSTEM" {
    cpus = 4
    memory = 8.GB
    time = 4.h
  }

}
